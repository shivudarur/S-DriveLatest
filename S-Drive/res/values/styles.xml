<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/WhiteTextViewStyle</item>
    </style>

    <style name="menu1_parent_row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">3</item>
    </style>

    <style name="menu1_parent_ll">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="menu1_icon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WhiteTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="home_text_block_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="home_text_block_header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="black_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/five</item>
        <item name="android:layout_height">@dimen/fifty</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_black_button</item>
    </style>

    <style name="home_blocks_layout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/seventy</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">@dimen/ten</item>
        <item name="android:layout_marginRight">@dimen/ten</item>
    </style>

    <style name="home_block_ll">
        <item name="android:layout_width">@dimen/one</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="largeTextSytle" parent="android:Widget.TextView">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="mediumTextSytle" parent="android:Widget.TextView">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="smallTextSytle" parent="android:Widget.TextView">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="small_black_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingTop">@dimen/five</item>
        <item name="android:paddingBottom">@dimen/five</item>
        <item name="android:paddingLeft">@dimen/twenty</item>
        <item name="android:paddingRight">@dimen/twenty</item>
        <item name="android:layout_marginTop">@dimen/ten</item>
        <item name="android:layout_marginBottom">@dimen/ten</item>
        <item name="android:layout_marginLeft">@dimen/thirty</item>
        <item name="android:layout_marginRight">@dimen/thirty</item>
        <item name="android:layout_height">@dimen/fifty</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_black_button</item>
    </style>

</resources>